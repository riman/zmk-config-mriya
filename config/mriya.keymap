#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/mouse.h>

#define DEF 0
#define LWR 1
#define RSE 2
#define ADJ 3

&lt { quick_tap_ms = <200>; };

&mt { quick_tap_ms = <200>; };

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
             &kp ESC         &kp N1  &kp N2              &kp N3    &kp N4    &kp N5         &kp N6     &kp N7     &kp N8       &kp N9     &kp N0    &kp BACKSPACE
&lt 2 GRAVE  &kp TAB         &kp Q   &kp W               &kp E     &kp R     &kp T          &kp Y      &kp U      &kp I        &kp O      &kp P     &kp LBKT       &mt RIGHT_WIN RIGHT_BRACKET
             &kp LEFT_SHIFT  &kp A   &kp S               &kp D     &kp F     &kp G          &kp H      &kp J      &kp K        &kp L      &kp SEMI  &kp APOS
             &kp LCTRL       &kp Z   &kp X               &kp C     &kp V     &kp B          &kp N      &kp M      &kp COMMA    &kp DOT    &kp FSLH  &kp BACKSLASH
                                     &mt LEFT_SHIFT DEL  &kp LWIN  &kp LALT  &lt 1 SPACE    &kp ENTER  &kp SPACE  &lt 1 SPACE  &kp RCTRL
            >;
        };

        nav {
            bindings = <
        &trans  &kp F1  &kp F2       &kp F3     &kp F4     &kp F5    &kp F6           &kp F7             &kp F8        &kp F9           &kp F10             &kp DEL
&trans  &trans  &trans  &mkp RCLK    &mkp MCLK  &mkp LCLK  &trans    &kp PAGE_UP      &kp PAGE_DOWN      &kp HOME      &kp END          &kp MINUS           &kp EQUAL        &kp F12
        &trans  &trans  &trans       &trans     &trans     &trans    &kp LEFT_ARROW   &kp DOWN_ARROW     &kp UP_ARROW  &kp RIGHT        &kp INS             &kp F11
        &trans  &trans  &trans       &trans     &trans     &trans    &kp C_VOLUME_UP  &kp C_VOLUME_DOWN  &kp K_MUTE    &kp PRINTSCREEN  &kp K_CONTEXT_MENU  &kp PAUSE_BREAK
                        &lt 3 SPACE  &trans     &trans     &trans    &lt 3 SPACE      &trans             &trans        &trans
            >;
        };

        LeftNav {
            bindings = <
        &trans  &trans  &trans    &trans        &trans     &trans        &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &kp HOME  &kp UP_ARROW  &kp END    &kp PG_UP     &trans  &trans  &trans  &trans  &trans  &trans  &trans
        &trans  &trans  &kp LEFT  &kp DOWN      &kp RIGHT  &kp PG_DN     &trans  &trans  &trans  &trans  &trans  &trans
        &trans  &trans  &trans    &trans        &trans     &trans        &trans  &trans  &trans  &trans  &trans  &trans
                        &trans    &trans        &trans     &kp DELETE    &trans  &trans  &trans  &trans
            >;
        };

        adjust_layer {
            bindings = <
       &bt BT_CLR   &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4  &bt BT_SEL 0    &none         &none         &none         &none         &none         &none
&none  &bootloader  &none         &none         &none         &none         &none           &none         &none         &none         &none         &none         &bootloader  &none
       &none        &none         &none         &none         &none         &none           &bt BT_SEL 4  &bt BT_SEL 3  &bt BT_SEL 2  &bt BT_SEL 1  &bt BT_SEL 0  &bt BT_CLR
       &sys_reset   &none         &none         &none         &none         &none           &none         &none         &none         &none         &none         &sys_reset
                                  &none         &none         &none         &none           &none         &none         &none         &none
            >;
        };
    };
};
